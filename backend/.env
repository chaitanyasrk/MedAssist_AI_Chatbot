# Azure OpenAI Configuration (only for chat)
AZURE_OPENAI_ENDPOINT=azure_endpoint_here
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Local Embedding Configuration
EMBEDDING_MODEL_NAME=thenlper/gte-large

# Vector Database Configuration
VECTOR_DB_PATH=./data/vectordb
COLLECTION_NAME=troubleshooting_docs

# Chat Configuration
MAX_CONTEXT_LENGTH=4000
TEMPERATURE=0.3
MAX_TOKENS=1000
SIMILARITY_THRESHOLD=0.7
TOP_K_RESULTS=5

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3

# Security Configuration
ENABLE_GUARDRAILS=true
GUARDRAILS_CONFIG_PATH=./config/guardrails_config.yml

# Evaluation Configuration
GOLDEN_DATASET_PATH=./data/golden_dataset.json
EVALUATION_METRICS_PATH=./data/evaluation_metrics.json

# Logging Configuration
LOG_LEVEL=INFO